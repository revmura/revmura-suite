{
  "name": "itc/revmura-suite",
  "require": {},
  "autoload": {
    "psr-4": {
      "Revmura\\Suite\\": "src/"
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.10",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "wp-coding-standards/wpcs": "^3.1"
  },
  "scripts": {
    "lint": "vendor/bin/phpcs -p -s --standard=phpcs.xml.dist .",
    "lint:fix": "vendor/bin/phpcbf -p -s --standard=phpcs.xml.dist ."
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
